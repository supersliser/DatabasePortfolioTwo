---
const items = [
  ["Home", "/"],
  ["About", "/about/"],
  ["Database", "/projects/"],
  ["Guides", "/guides/"],
  ["Tasks", "/tasks/"],
  ["Contact", "/contact/"],
];
---

<nav
  style="padding: 0; margin: 0;width: 100%; height: 100%; position: relative; top: 0; left: 0; background-color: #000000; display: flex; flex-direction: row; justify-content: start; align-items: end; flex-wrap: nowrap; border-color: white;border-width: 0; border-bottom-width: 1px; border-style: solid; overflow-x:auto"
>
  {
    items.map((item) => (
      <a
        href={item[1]}
        style="padding: 0;padding-left: 1rem; margin: 0; color: #ffffff; fontSize: 2rem; textAlign: left; margin-left: 1rem; border-width: 0px; border-right-width: 1px; border-style: solid; border-color: #ffffff; font-size: 2.5rem; text-decoration: none; font-family: 'Expletus Sans Variable', system-ui;"
      >
        {item[0]}
      </a>
    ))
  }
</nav>
