---
const { src, alt } = Astro.props;
---

<div
    style="flex-direction: column; align-items: center; justify-content: start; display: flex; max-width: 100%;"
>
    <iframe
        style="width: 100%; min-height: 80%;"
        title="Vernos Langathripoodinary III"
        allowfullscreen
        allowfullscreen="true"
        allow="autoplay; fullscreen; xr-spatial-tracking"
        xr-spatial-tracking
        execution-while-out-of-viewport
        execution-while-not-rendered
        web-share
        src={src}
        width={600}
        height={600}
    >
        {alt}
    </iframe>
    <p
        style="text-align: center; font-size: 0.8rem; margin-top: 0; border-top: 1px solid #ffffff; width: 550px;"
    >
        {alt}
    </p>
</div>
