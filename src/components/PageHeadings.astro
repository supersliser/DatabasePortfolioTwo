---
const { headings } = Astro.props;
---

<ul
  class="hideable"
  style="width: 22vw; overflow-y: auto; height: 95.9vh; position: fixed; top: -1.6%; left: 75.8vw; padding: 20px; background-color: #0F0F26; color: #ffffff; min-height: 100vh; overflow-y: auto; border-color: #ffffff; border-width: 1px; border-style: solid"
>
  {
    headings?.map((heading: any) => (
      <li style="display: flex; flex-direction: row; justify-content: space-between; align-items: center; font-family: 'Expletus Sans Variable', system-ui;">
        <a
          style={
            "margin-left: " +
            heading.depth * 20 +
            "px; margin-top: " +
            (1 / heading.depth) * 50 +
            "px; color: #ffffff; font-family: 'Expletus Sans Variable', system-ui;"
          }
          href={`#${heading.slug}`}
        >
          {heading.text}
        </a>
      </li>
    ))
  }
</ul>
