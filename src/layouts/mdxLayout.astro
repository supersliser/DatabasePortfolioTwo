---
// Supports weights 400-700
import "@fontsource-variable/expletus-sans";
// Supports weights 100-900
import "@fontsource-variable/exo-2";
import "../styles/mdx.css";
import PageDirectory from "../components/PageDirectory.astro";
import PageHeadings from "../components/PageHeadings.astro";
import SearchBar from "../components/SearchBar";
import MainPage from "../components/MainPage.astro";
import Navbar from "../components/Navbar.astro";
const { frontmatter, headings } = Astro.props;
const projects = await Astro.glob("../pages/projects/*.mdx");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title + " | Thomas Lower Database Portfolio"}</title>
  </head>
  <body style="margin: 0; padding: 0; border-width: 0; min-height: 100vh;">
    <PageDirectory
      projects={projects}
      attachedToSearch={false}
    />
    <PageHeadings headings={headings} />
    <div
      style="border-color: #ffffff; border-width: 1px;border-style: solid;position: fixed; top: 0vh; left: 21.4%; width: 54.6%; height: 7vh; background-color: #000000; color: #ffffff; z-index: 200; justify-content: space-around; display: flex; flex-direction: column;"
    >
      <Navbar />
    </div>
    <div
      style="border-color: #ffffff; border-width: 1px;border-style: solid;position: absolute; top: 7vh; left: 21.4%; width: 54.6%; height: 10%; background-color: #000000; color: #ffffff; z-index: 100; padding-top: 5vh;"
    >
      <SearchBar client:load projects={projects} />
    </div>
    <main
      style="border-style: solid;position: absolute; top: 22vh; left: 21.4%; width: 44.6%; min-height: 90%; background-color: #000000; color: #ffffff;border-color: #ffffff; border-width: 1px;"
    >
      <slot />
      <div
        style="display: flex; flex-direction: row; align-items: start; justify-content: center; margin-top: 5%; margin-left: 20%; margin-right: 25%; flex-wrap:wrap;"
      >
        {
          frontmatter.tags.map((tag: string) => (
            <a
              style="margin: 0px; padding: 0px; margin-left:10px"
              href={frontmatter.slug}
            >
              #{tag}
            </a>
          ))
        }
      </div>
    </main>
  </body>
</html>
